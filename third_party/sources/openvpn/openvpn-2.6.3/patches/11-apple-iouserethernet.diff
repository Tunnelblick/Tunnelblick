+static struct ether_addr generate_random_mac(void) {
+    uint32_t rand1 = arc4random();
+    uint32_t rand2 = arc4random();
+    struct ether_addr rea = {.octet = {
+                                 (rand1 >> 0) & 0xff,
+                                 (rand1 >> 8) & 0xff,
+                                 (rand1 >> 16) & 0xff,
+                                 (rand1 >> 24) & 0xff,
+                                 (rand2 >> 0) & 0xff,
+                                 (rand2 >> 8) & 0xff,
+                             }};
+    rea.octet[0] |= 0x02;
+    rea.octet[0] &= 0xfe;
+    return rea;
+}
